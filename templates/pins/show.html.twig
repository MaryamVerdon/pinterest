{% extends 'layouts/base.html.twig' %}
{% block title pin.title %}

{% block body %}
    <article>
        <h1>{{ pin.title }}</h1>
        <p>{{ pin.description }}</p>
    </article>

    <a href="{{ path('pins_edit', {id: pin.id}) }}">Modifier</a>
    <a href="#" onclick="event.preventDefault(); confirm('Voulez vous valider la supression ?') && document.getElementById('js-pin-delete-form').submit();">Supprimer</a>
    <a href="{{ path('home') }}"> Retour Ã  la page d'accueil</a>

    <form id="js-pin-delete-form" action="{{ path('pins_delete', {id: pin.id}) }}" method="post" style="display:none">
        <input type="hidden" name="csrf_token" value="{{ csrf_token('pin_deletion' ~ pin.id) }}">;
        <input type="hidden" name="_method" value="DELETE">
    </form>
{% endblock %}